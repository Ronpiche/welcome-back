{
  "name": "hub-back",
  "version": "0.0.1",
  "description": "the back end service for the HUB dashboard",
  "author": "Daveo",
  "private": true,
  "license": "UNLICENSED",
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "build": "nest build",
    "start:dev": "cross-env NODE_ENV=dev nest start --watch",
    "start": "nest start",
    "start:prod": "node dist/src/main",
    "start:debug": "nest start --debug --watch",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\"",
    "lint:fix": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"test/**/*.ts\"",
    "test:unit": "jest --config ./configs/jest.config.ts",
    "test:integration": "cross-env NODE_ENV=test jest --config ./configs/jest-e2e.config.ts",
    "docker:run:env": "docker-compose -f ./configs/docker/docker-compose.yml up",
    "prepare": "husky",
    "script:create-git-branch": "bash scripts/create-git-branch.sh",
    "script:create-pull-request": "bash scripts/create-pull-request.sh"
  },
  "dependencies": {
    "@azure/msal-node": "^2.6.5",
    "@google-cloud/firestore": "^7.4.0",
    "@google-cloud/secret-manager": "^5.6.0",
    "@google-cloud/storage": "^7.11.1",
    "@jest/types": "^29.6.3",
    "@nestjs-modules/mailer": "^2.0.2",
    "@nestjs/cli": "^10.3.2",
    "@nestjs/common": "^10.3.5",
    "@nestjs/config": "^3.2.0",
    "@nestjs/core": "^10.0.0",
    "@nestjs/jwt": "^10.2.0",
    "@nestjs/platform-express": "^10.0.0",
    "@nestjs/schematics": "^10.1.1",
    "@nestjs/swagger": "^7.3.0",
    "@nestjs/testing": "^10.3.5",
    "aws-jwt-verify": "^4.0.1",
    "axios": "^1.6.8",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "cookie-parser": "^1.4.6",
    "cross-env": "^7.0.3",
    "date-holidays": "^3.23.11",
    "firebase": "^10.12.2",
    "firebase-admin": "^12.2.0",
    "markdown-it": "^14.1.0",
    "msw": "^2.2.13",
    "nestjs-session": "^3.0.1",
    "node-cache": "^5.1.2",
    "nodemailer": "^6.9.14",
    "reflect-metadata": "^0.2.0",
    "rxjs": "^7.8.1",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^19.2.2",
    "@types/cookie-parser": "^1.4.7",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.2",
    "@types/markdown-it": "^14.1.1",
    "@types/node": "^20.11.30",
    "@types/nodemailer": "^6.4.15",
    "@types/supertest": "^6.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "husky": "^9.0.11",
    "jest": "^29.5.0",
    "msw": "^2.2.13",
    "prettier": "^3.2.5",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.3",
    "validate-branch-name": "^1.3.1"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged && npm run lint"
    }
  },
  "lint-staged": {
    "*.ts": [
      "prettier --write"
    ]
  }
}
